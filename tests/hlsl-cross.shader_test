[pixel shader]
float4 main(uniform float4 u, uniform float4 v) : sv_target
{
    float4 res = float4(0, 0, 0, 0);
    res.xyz = cross(u, v);
    return res;
}

[test]
uniform 0 float4 1 -2 3 4
uniform 4 float4 10 100 1000 10000
draw quad
probe all rgba (-2300, -970, 120, 0)



