[pixel shader]

uniform float f;

float func(out float o)
{
    o = 0.1;
    if (f < 0.3)
    {
        return 0.2;
    }
    o += 0.3;
    if (f < 0.7)
    {
        return 0.5;
    }
    o += 0.5;
    return 1.0;
}

float func2(out float o)
{
    o = 0.1;
    if (f < 0.7)
    {
        if (f < 0.3)
            return 0.2;
        o += 0.3;
    }
    o += 0.5;
    return 1.0;
}

float4 main() : sv_target
{
    float4 ret;

    ret.x = func(ret.y);
    ret.z = func2(ret.w);
    return ret;
}

