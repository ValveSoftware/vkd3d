% Test early return from a user-defined function.

[pixel shader]

float func(out float o)
{
    o = 0.1;
    return 0.2;
    o = 0.3;
    return 0.4;
}

void func2(out float o)
{
    o = 0.5;
    return;
    o = 0.6;
}

float4 main() : sv_target
{
    float4 ret;

    ret.z = 0.7;
    ret.x = func(ret.y);
    func2(ret.w);
    ret.z = 0.8;
    return ret;
}

[test]
draw quad
probe all rgba (0.2, 0.1, 0.8, 0.5);

[pixel shader]

uniform float f;

float func(out float o)
{
    o = 0.1;
    if (f < 0.3)
    {
        return 0.2;
        o = 0.3;
    }
    else if (f < 0.7)
    {
        o = 0.4;
        return 0.5;
    }
    o = 0.6;
    return 0.7;
}

float func2(out float o)
{
    o = 0.1;
    if (f < 0.5)
    {
        o = 0.2;
    }
    else
    {
        o = 0.4;
        return 0.3;
    }
    return 0.5;
}

float4 main() : sv_target
{
    float4 ret;

    ret.x = func(ret.y);
    ret.z = func2(ret.w);
    ret += 0.1;
    return ret;
}

