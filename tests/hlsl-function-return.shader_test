[test]
draw quad
probe all rgba (0.4, 0.3, 0.3, 0.9) 1

[pixel shader]

uniform float f;

float func(out float o)
{
    int i;

    o = 0.1;
    for (i = 0; i < 4; ++i)
    {
        if (o > f)
            return 0.2;
        o *= 2;
    }
    o = 0;
    return 0.3;
}

float func2(out float o)
{
    if (f < 0.5)
    {
        o = 0.1;
        for (;;)
        {
            o *= 2;
            return 0.2;
        }
        o *= 3;
        return 0.3;
    }
    else
    {
        o = 0.4;
    }
    o = 0.5;
    return 0.6;
}

float4 main() : sv_target
{
    float4 ret;

    ret.x = func(ret.y);
    ret.z = func2(ret.w);
    ret += 0.1;
    return ret;
}

