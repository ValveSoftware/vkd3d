[pixel shader]

uniform float4 f[4];

float func(out float o)
{
    int i, j;

    o = 0.1;
    for (i = 0; i < 4; ++i)
    {
        for (j = 0; j < 4; ++j)
        {
            if (o > f[j].x)
                return 0.2;
        }
        o *= 2;
    }
    o = 0;
    return 0.3;
}

float4 main() : sv_target
{
    float4 ret;

    ret.x = func(ret.y);
    ret.zw = 0.5;
    ret += 0.1;
    return ret;
}

