% Test implicit and explicit casts on function output parameters.

[pixel shader todo]

uniform float4 f;

void func(out float4 o)
{
    o = f;
}

float4 main() : sv_target
{
    int4 x;
    func(x);
    return x;
}

[test]
uniform 0 float4 -1.9 -1.0 2.9 4.0
