[pixel shader]
float unused[2] : register(c2); // will create a gap in c0.
float size3[3]; // cannot be placed in c0.
float size2[2]; // can be placed in c0.

float4 main() : sv_target
{
    float4 res;

    res.x = size3[2];
    res.y = size2[1];
    res.z = 0;
    res.w = 0;
    return res;
}
