[pixel shader]
// Only the used size is reserved.
// Note that these matrices are column-major.
float4x2 a;
float4x2 b;

float4 main() : sv_target
{
    float4x2 c = a;
    float4x2 d = c + b;

    return float4(d[0].x, d[1].x, d[2].x, d[3].x);
}
// Registers:
//
//   Name         Reg   Size
//   ------------ ----- ----
//   a            c0       1
//   b            c1       1
//
