[pixel shader]
uniform float4 a;

float4 main() : sv_target
{
    float4 result = float4(asin(a.x), 0.0, 0.0, 0.0);
    // Quantize to cover implementation variations, which are quite large for asin().
    return round(result * 20000.0);
}

