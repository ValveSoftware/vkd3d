[compute shader]
uniform uint2 u;

RWBuffer<uint> u0;
RWBuffer<uint> u1;

    [numthreads(4, 1, 1)]
void main(uint id : SV_GroupIndex)
{
    uint table[] = {u.x, u.y};
    uint i;

    // Value depends on control flow.
    if (id & 1)
        i = table[id / 2u];
    else
        i = u0[id / 2u];

    u1[id] = WaveActiveSum(i);
}

