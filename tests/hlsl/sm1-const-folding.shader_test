% Explicit float literals use float semantics, at least
[pixel shader]
float4 main() : SV_TARGET
{
    float x = 3000000000.0 + 3000000000.0;
    return float4(x, 0.0, 0.0, 0.0);
}

[test]
draw quad
probe all rgba (6.0e+009, 0.0, 0.0, 0.0)
