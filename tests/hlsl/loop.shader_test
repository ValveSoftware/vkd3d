{
    int i = 0;
    float res = a;

    do
    {
       res += 1.0f;
       if (i == 5)
       {
           res += 0.1f;
           break;
       }
       i++;
       if (i == 2) continue;
       res += 100.f;
    }
    while (i < 10);

    return res;
}

