[require]
shader model >= 4.0

[pixel shader]
uniform float4 f;

float4 main() : sv_target
{
    return all(f);
}

[test]
uniform 0 float4 -1.1 1.6 1.3 0.5
draw quad
probe all rgba (1.0, 1.0, 1.0, 1.0)

[test]
uniform 0 float4 0.0 1.6 1.3 0.5
draw quad
probe all rgba (0.0, 0.0, 0.0, 0.0)

[test]
