% In SM4, array elements are always aligned to the next vec4, although structs are not.

[require]
shader model >= 4.0

[pixel shader]
uniform struct
{
    float p, q;
} colours[3];

float4 main() : sv_target
{
    return float4(colours[0].q, colours[1].p, colours[2].q, colours[2].p);
}

