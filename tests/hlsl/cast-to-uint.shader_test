% On SM1, uints can only be used with known-positive values.
[require]
shader model >= 4.0


[pixel shader]
uniform float f;
uniform int i;
uniform bool b;
uniform float h;

float4 main() : sv_target
{
    float4 ret;

    ret.x = ((float)(uint)f) - 1.5;
    ret.y = ((float)(uint)i) - 1.5;
    ret.z = ((float)(uint)b) / 2;
    ret.w = ((float)(uint)(half)h) + 0.5;
    return ret;
}

