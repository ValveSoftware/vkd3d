[require]
shader model >= 5.0

[pixel shader]
struct apple {
    float2 a;
    Texture2D tex;
    sampler sam;
    float b;
};

uniform apple ap;

float4 main() : sv_target
{
    return float4(ap.a, ap.b, 0);
}

