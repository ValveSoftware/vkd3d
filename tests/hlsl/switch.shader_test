[require]
shader model >= 6.0

[pixel shader]
uint64_t2 v;

float4 main() : sv_target
{
    // Need three cases because dxcompiler optimises two case values to a pair of vselect instructions.
    switch (v.x)
    {
    case 0:
        return 3.0;
    case 0x100000002:
        return 4.0;
    case 3:
        return 2.0;
    default:
        return 5.0;
    }
}

