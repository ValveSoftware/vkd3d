[uav 1]
format r32g32b32a32 sint
size (buffer, 2)
1 2 3 4 5 6 7 8

[pixel shader]
RWBuffer<int4> u : register(u1);

float4 main() : sv_target
{
    u[0] = int4(11, -12, 13, -14);
    u[1] = int4(-15, 16, -17, 18);
    return 0;
}

[test]
draw quad
probe uav 1 (0) rgbai (11, -12, 13, -14)
probe uav 1 (1) rgbai (-15, 16, -17, 18)

