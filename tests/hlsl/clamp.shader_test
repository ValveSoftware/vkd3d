[pixel shader]
uniform float3 u;

float4 main() : sv_target
{
    return float4(clamp(u.x, u.y, u.z), clamp(0.9, u.y, u.z), clamp(u.x, -0.5, u.z), clamp(0.6, -0.4, 0.3));
}

