[pixel shader]
RWTexture2D<float> u;
RWTexture2D<float4> v;

float4 main() : sv_target
{
    u[uint2(0, 0)] = 0.5;
    u[uint2(0, 1)].x = 0.6;
    u[uint2(1, 1)] = 0.7;
    v[uint2(0, 0)].yxwz = float4(1, 2, 3, 4);
    return 0;
}

