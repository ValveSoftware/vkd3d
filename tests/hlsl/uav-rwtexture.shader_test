[pixel shader]
RWTexture2D<float4> u[2] : register(u2);

float4 main() : sv_target1
{
    u[0][uint2(0, 0)] = float4(1.1, 1.2, 1.3, 1.4);
    u[1][uint2(0, 0)] = float4(2.1, 2.2, 2.3, 2.4);
    return 0;
}

