[vertex shader]
void main(float4 pos : position, out float tex : texcoord, out float4 out_pos : sv_position)
{
    tex = (pos.x + 1) * 320;
    out_pos = pos;
}

[pixel shader todo(sm<4)]
float4 main(float tex : texcoord) : sv_target
{
    tex = floor(tex + 0.25);
    return float4(sin(tex), cos(tex), tan(tex), 0);
}

