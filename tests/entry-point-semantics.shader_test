% Arguments with the same semantic aren't aliased.
[pixel shader]
float4 main(in float4 t1 : TEXCOORD0, in float4 t2 : TEXCOORD0) : sv_target
{
    t1 = 99;
    return float4(t1.xy, t2.xy);
}

